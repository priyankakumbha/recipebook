<div class="main_form">
<%= form_for(recipe) do |f| %>
  <% if recipe.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>
      <ul>
      <% recipe.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :image %>
    <%= f.text_field :image %>
  </div>

  <div class="field">
    <%= f.label :category %>
    <%= f.collection_select(:category_ids, Category.all, :id, :name) %>
</div>

<div class="field">
  <%= f.label :ingredients %>
  <%= f.collection_check_boxes :ingredient_ids, Ingredient.all, :id, :name %>
</div>

  <div class="field">
    <%= f.label :instructions %>
    <%= f.text_area :instructions, :class=>"materialize-textarea" %>
  </div>

  <div class="actions">
    <%= f.submit :class => "waves-effect waves-light btn" %>
  </div>
  <%= link_to 'Back',user_path(@current_user),:class => "waves-effect waves-light btn" %>

<% end %>
</div>
