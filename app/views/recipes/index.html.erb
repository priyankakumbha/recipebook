<p id="notice"><%= notice %></p>
<h1>Recipes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Image</th>
      <th>Instructions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.name %></td>
        <td><img src="<%= recipe.image %>"width="200" height="200" margin-right:"10px"></td>
          <td>
          <% recipe.categories.each do |category| %>
            <%= category.name %>
          <% end %>
          </td>

          <td>
          <% recipe.ingredients.each do |ingredient|  %>
            <%= ingredient.name %>
          <% end %>
          </td>
        <td><%= recipe.instructions %></td>
        <td><%= link_to 'Show', recipe ,:class => "waves-effect waves-light btn"%></td>
        <td><%= link_to 'Edit', edit_recipe_path(recipe),:class => "waves-effect waves-light btn" %></td>
        <td><%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' },:class => "waves-effect waves-light btn" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Recipe', new_recipe_path,:class => "waves-effect waves-light btn" %>
